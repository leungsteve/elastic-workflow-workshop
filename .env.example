# Elasticsearch Connection
# For Cloud Serverless, use the full URL including port
ELASTICSEARCH_URL=https://your-cluster.es.cloud.elastic.co:443

# Authentication (use ONE of the following methods)
# For Cloud Serverless - use API Key:
ELASTICSEARCH_API_KEY=your-api-key-here

# For Local/VM - use username/password:
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=changeme

# Application Settings
APP_ENV=development
APP_PORT=8000
LOG_LEVEL=INFO

# ELSER Inference (optional - semantic search)
# Verify ELSER availability in your environment before enabling
ELSER_INFERENCE_ID=elser
ELSER_ENABLED=false

# Target Business Override (optional)
# Set this to skip automatic target selection
# TARGET_BUSINESS_ID=yelp-biz-xxxxx
